<Label>:
    font_size: 30

<Okno>
    btnRes: btnRes
    btnMen: btnMen

    GridLayout:
        cols: 1
        size: root.width - 200, root.height -200
        pos: 100, 100

        Label:
            text: "Vyhrál jsi, výborně"

        GridLayout:
            cols: 2

            Button:
                id: btnRes
                text: "Restart"
                on_press: root.restart()

            Button:
                id: btnMen
                text: "Menu"
                on_press: root.menu()