<Label>:
    font_size: 30

<Okno>
    btnRes: btnRes
    btnMen: btnMen

    canvas.before:
        Color:
            rgba: (0.85, 0.66, 0.31, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        size: root.width - 200, root.height -200
        pos: 100, 100

        Label:
            text: "Vyhrál jsi, výborně"
            color: 0, 0, 0, 1
            font_size: 60

        GridLayout:
            cols: 2
            spacing: 10

            Button:
                id: btnRes
                text: "Restart"
                on_press: root.restart()
                background_normal: ''
                background_color: 0.7, 0.85, 0.31, 1
                color: 0, 0, 0, 1

            Button:
                id: btnMen
                text: "Menu"
                on_press: root.menu()
                background_normal: ''
                background_color: 0.7, 0.85, 0.31, 1
                color: 0, 0, 0, 1