<Label>:
    font_size: 30

<Okno>
    btnPoc: btnPoc
    btnGra: btnGra

    GridLayout:
        cols: 1
        size: root.width - 200, root.height -200
        pos: 100, 100

        Label:
            text: "Výuková aplikace"

        GridLayout:
            cols: 2

            Button:
                id: btnPoc
                text: "Pocitani do 20"
                on_press: root.poct()

            Button:
                id: btnGra
                text: "Gramatika"
                on_press: root.gram()